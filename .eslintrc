{
	"rules": {
		"indent": 0,
		"global-require": 0,
		"no-await-in-loop": 0
	},
	"extends": [
		"nodemailer",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"overrides": [
		{
			"files": [
				"**/*.test.js"
			],
			"env": {
				"jest": true
			}
		}
	]
}